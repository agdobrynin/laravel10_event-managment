                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiValidationDto"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Attendee"
                ],
                "summary": "Store a newly created resource in storage.",
                "description": "Store new attendee to Event",
                "operationId": "attendeesStoreInEvent",
                "parameters": [
                    {
                        "name": "event",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Success store new attendee to Event.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AttendeeResource"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponseDto"
                                }
                            }
                        }
