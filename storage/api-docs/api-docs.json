                    "404": {
                        "description": "Event not found by id.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponseDto"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "apiKeyBearer": []
                    }
                ]
            }
        },
